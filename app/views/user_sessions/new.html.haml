.twelve.columns
  %h2 Login
  %p
    Provide your account details to the right.
  = render('shared/error_messages', target: @user_session)
.four.columns
  = form_for(@user_session, url: user_session_path) do |f|
    = f.label(:email)
    = f.text_field(:email)
    = f.label(:password)
    = f.password_field(:password)
    = f.label(:remember_me, class: 'single') do
      = f.check_box(:remember_me)
      %span Remember me
    %button.full-width{ type: 'submit' }
      %i.icon-login Login